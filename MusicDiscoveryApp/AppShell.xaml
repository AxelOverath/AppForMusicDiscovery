<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MusicDiscoveryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MusicDiscoveryApp"
    Title="MusicDiscoveryApp">


    <TabBar Shell.TabBarBackgroundColor="#288d52" Shell.TabBarUnselectedColor="White" Shell.TabBarForegroundColor="Aquamarine" >
        <ShellContent 
                  Icon="musicalnote.png"
                  ContentTemplate="{DataTemplate local:Swipepage}" />
        <ShellContent Icon="book.png" 
                      ContentTemplate="{DataTemplate local:Swipepage}" /> <!--TempLibrary-->
        <ShellContent Icon="friends.png"
                      ContentTemplate="{DataTemplate local:Swipepage}"/>  <!--FriendsList-->
        <ShellContent Icon="settings.png"
                      ContentTemplate="{DataTemplate local:Settings}"/>
        
    </TabBar>
</Shell>

