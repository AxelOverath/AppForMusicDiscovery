<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MusicDiscoveryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MusicDiscoveryApp"
    Title="MusicDiscoveryApp"
    TabBarIsVisible="True">

    <TabBar>
        <ShellContent Route="Swipepage"
                     Title="Swipepage"
                     Icon="musicalnote.png"
                     ContentTemplate="{DataTemplate local:Swipepage}">
        </ShellContent> 

        <ShellContent Route="Library"
                     Title="Library"
                     Icon="book.png"
                     ContentTemplate="{DataTemplate local:Swipepage}" />

        <ShellContent Route="Friends"
                     Title="Friends"
                     Icon="friends.png"
                     ContentTemplate="{DataTemplate local:Swipepage}" />

        <ShellContent Route="Settings"
                     Title="Settings"
                     Icon="settings.png"
                     ContentTemplate="{DataTemplate local:AccountDetails}" />
    </TabBar>
</Shell>
