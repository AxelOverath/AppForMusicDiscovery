<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicDiscoveryApp.ForgetPassword"
             Title="ForgetPassword"
             BackgroundColor="#ede2b0">
    
    <VerticalStackLayout>
        <Image Source="logo.png" HeightRequest="250" WidthRequest="250" />



        <VerticalStackLayout Spacing="5" Padding="0,-50,0,40" >
            <Label Text="After you put your email adres in, we will send you an email" HorizontalOptions="Center"/>
            <Label x:Name="info" HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <StackLayout Orientation="Horizontal">
        <Frame HeightRequest="45" Margin="-20,0,0,0" Padding="0" HasShadow="True" BorderColor="#288d52" HorizontalOptions="FillAndExpand">
            <Entry x:Name="email" Margin="40,0,0,0" TextColor="Black" VerticalTextAlignment="Center" Placeholder="Email" PlaceholderColor="#236738" Keyboard="Email"/>
        </Frame>
        </StackLayout>
        
        <Button Clicked="SendEmail" x:Name="send" Text="Send Email" WidthRequest="100" CornerRadius="20" HorizontalOptions="Center" BackgroundColor="#2db36d"/>

    </VerticalStackLayout>
    
    
    
    
</ContentPage>