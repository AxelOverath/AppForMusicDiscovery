<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicDiscoveryApp.FriendList"
             BackgroundColor="#ede2b0"
             Shell.NavBarIsVisible="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" HorizontalOptions="End" Padding="10">
            <Button ImageSource="friend_add.png" Clicked="GoToFriendAdd_Clicked" BackgroundColor="Transparent"/>
        </StackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Margin="10" x:Name="FriendsStackLayout"/>
        </ScrollView>
    </Grid>

</ContentPage>
